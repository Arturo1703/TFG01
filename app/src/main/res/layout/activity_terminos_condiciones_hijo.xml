<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.hijo.TerminosCondicionesHijo">
    <include layout="@layout/action_bar_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminos y Condiciones de Uso"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Texto explicativo sobre las condiciones de uso"
            android:background="@drawable/borde_stylo_solido"
            android:id="@+id/nombrePadreReg"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condición 1"
            android:id="@+id/Condicion1"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Condición 2"
            android:id="@+id/Condicion2"/>
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soy mayor de 14"
            android:background="@drawable/borde_stylo_solido"
            android:id="@+id/EdadSwitch"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/EdadSwitch"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Cancelar"
                android:id="@+id/CancelTermButton"
                android:paddingEnd="10dp"

                android:backgroundTint="@color/gris"

                android:textAllCaps="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="aceptar"
                android:paddingStart="10dp"
                android:id="@+id/AcceptTermButton"
                android:textAllCaps="true"
                android:backgroundTint="@color/purple_500"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>