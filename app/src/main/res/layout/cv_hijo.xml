<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHijoId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nmlistahijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Nombre Hijo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idlistahijo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nmlistahijo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:text="Id del hijo" />

        <ImageView
            android:id="@+id/pflistahijo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/idlistahijo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_background" />
        <Button
            android:id="@+id/mensajeHijo"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/pflistahijo"
            android:layout_centerHorizontal="true"
            android:text="Mandar Mensaje" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>